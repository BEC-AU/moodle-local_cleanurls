<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/cleanurls/db" VERSION="20170731" COMMENT="XMLDB file for Moodle local/cleanurls"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_cleanurls_cmpaths" COMMENT="Course Module custom paths">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="path" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false" COMMENT="Subpath after the course format path."/>
        <FIELD NAME="cmid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Course Module ID"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="locclecmp_cmid_uk" TYPE="unique" FIELDS="cmid" COMMENT="Only one row per cmid."/>
      </KEYS>
    </TABLE>
    <TABLE NAME="local_cleanurls_history" COMMENT="History of URLs to store it permanently after changes.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="clean" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="This is the clean (semantic) url, used to map into an unclean url."/>
        <FIELD NAME="unclean" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="This is the original (raw) url, pointing to a file."/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="When was this last saved."/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="loccleurlhis_cle_uk" TYPE="unique" FIELDS="clean" COMMENT="A clean URL can map to only one unclean URL."/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="loccleurlurlhis_timemodified_ix" UNIQUE="false" FIELDS="timemodified"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
